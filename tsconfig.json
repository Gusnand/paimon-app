{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/(tabs)/profile.tsx",
    "app/(tabs)/home.tsx",
    "app/(tabs)/destination.tsx",
    "app/(tabs)/_layout.tsx"
  ]
}
